{
  "name": "@internetarchive/donation-form-data-models",
  "version": "0.3.3",
  "description": "Internet Archive Donation Form Data Models",
  "license": "AGPL-3.0-only",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "tsc",
    "tsc:watch": "tsc --watch",
    "lint:eslint": "eslint .",
    "format:eslint": "eslint . --fix",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "format": "yarn run format:eslint && yarn run format:prettier",
    "test": "tsc && karma start --coverage",
    "test:watch": "concurrently --kill-others --names tsc,karma \"yarn run tsc:watch\" \"karma start --auto-watch=true --single-run=false\""
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "concurrently": "^5.1.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.23.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.4",
    "tslib": "^1.11.0",
    "typescript": "^5.7.2"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
